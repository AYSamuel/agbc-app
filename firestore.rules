rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isPastor() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'pastor';
    }
    
    function isMember() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'member';
    }
    
    function isWorker() {
      return isAuthenticated() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'worker';
    }
    
    function isUserBranchPastor(branchId) {
      return isPastor() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.branchId == branchId;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAuthenticated() && (
        request.auth.uid == userId || 
        isAdmin()
      );
      allow delete: if isAdmin();
    }

    // Branches collection
    match /branches/{branchId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin();
      allow update: if isAdmin() || isUserBranchPastor(branchId);
      allow delete: if isAdmin();
    }

    // Tasks collection
    match /tasks/{taskId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin() || isPastor() || isWorker();
      allow update: if isAuthenticated() && (
        isAdmin() || 
        isPastor() || 
        isWorker() ||
        resource.data.assignedTo == request.auth.uid
      );
      allow delete: if isAdmin() || isPastor() || isWorker();
    }

    // Meetings collection
    match /meetings/{meetingId} {
      allow read: if isAuthenticated();
      allow create: if isAdmin() || isPastor();
      allow update: if isAuthenticated() && (
        isAdmin() || 
        isPastor() || 
        resource.data.organizerId == request.auth.uid
      );
      allow delete: if isAdmin() || isPastor();
    }

    // Comments collection
    match /comments/{commentId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow delete: if isAuthenticated() && (
        resource.data.userId == request.auth.uid || 
        isAdmin() || 
        isPastor()
      );
    }
  }
} 